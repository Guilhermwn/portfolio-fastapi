{% macro newComponent(image, title, description, link) -%}
<div class="bg-white w-4/5 rounded-lg shadow-md p-4 sm:w-[70%] p-2">
    <img src="{{ image }}" alt="{{ title }}" class="w-full h-40 object-cover rounded-lg mb-4">
    <h4 class="text-black text-xl font-medium mb-2">{{ title }}</h4>
    <p class="text-gray-600 mb-4">{{ description }}</p>
    <a href="{{ link }}" class="inline-block px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">Saiba mais</a>
</div>
{%- endmacro %}